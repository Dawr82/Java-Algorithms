pipeline {
    agent any

    stages {
        stage('clone') {
            steps {
                sh "docker rm -f clone"
                sh "docker volume create clone"
                sh "docker run --mount source=clone,target=/app --name clone ubuntu"
                sh "rm -rf Java-Algorithms"
                sh "git clone https://github.com/Dawr82/Java-Algorithms.git"
                sh "docker cp ./Java-Algorithms/* clone:/app"
                sh "docker rm -f clone"
            }
        }
        stage('build') {
            steps {
                sh "docker rm -f builder"
                sh "docker volume create build"
                sh "docker build -t builder /dockerfiles/jenkins/builder/Dockerfile"
                sh '''docker run --mount source=clone,target=/app 
                --mount source=build,target=/build --name builder builder'''
            }
        }
        stage('test') {
            steps {
                sh "docker rm -f tester"
                sh "docker build -t tester /dockerfiles/jenkins/tester/Dockerfile"
                sh "docker run --mount source=build,target=/app --name tester tester"
            }
        }
    }
}